# ============================================
# 应用配置
# ============================================
NODE_ENV=development
PORT=3000
API_PREFIX=/api

# ============================================
# 数据库配置
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your_password
DB_DATABASE=video_production_db

# ============================================
# JWT 配置
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# ============================================
# 阿里云 OSS 配置
# ============================================
OSS_REGION=oss-cn-hangzhou
OSS_ACCESS_KEY_ID=your_oss_access_key_id
OSS_ACCESS_KEY_SECRET=your_oss_access_key_secret
OSS_BUCKET=your-bucket-name
OSS_ENDPOINT=https://oss-cn-hangzhou.aliyuncs.com

# ============================================
# CORS 配置
# ============================================
CORS_ORIGIN=http://localhost:5173,http://localhost:3001

# ============================================
# 文件上传配置
# ============================================
MAX_FILE_SIZE=10485760
# 10MB = 10 * 1024 * 1024 bytes

# ============================================
# 日志配置
# ============================================
LOG_LEVEL=debug

# ============================================
# AI 大模型配置
# ============================================
DASHSCOPE_API_KEY=your_dashscope_api_key
DEEPSEEK_API_KEY=
KIMI_API_KEY=
AI_TEXT_MODEL=qwen-turbo
AI_TEXT_ENDPOINT=https://dashscope.aliyuncs.com/api/v1/services/aigc/text-generation/generation
AI_VISION_MODEL=qwen-vl-plus
AI_VISION_ENDPOINT=https://dashscope.aliyuncs.com/api/v1/services/aigc/multimodal-generation/generation
AI_TRANSCRIPTION_MODEL=qwen-audio-turbo
